@model IEnumerable<KevinsMVCLab.ViewModels.CommentViewModel>

@foreach (var comment in Model)
{
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>@comment.User</strong> <span class="text-muted">commented @comment.DatePosted</span>

            </div>
            <div class="panel-body">
                <h4>@comment.Title</h4>

                <p>
                    @comment.Comment
                </p>
            </div>
        </div>
    </div>
}

